:80 {
    root * /usr/share/caddy
    file_server
    try_files {path} /index.html
    
    # Proxy API requests to backend
    @api {
        path /api/*
    }
    reverse_proxy @api backend:8081 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }
}







